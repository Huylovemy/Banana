import tkinter as tk
import time

def hien_thong_bao(text, duration=3000):
    root = tk.Tk()
    
    # Cấu hình cửa sổ không viền
    root.overrideredirect(True)
    root.attributes("-topmost", True) # Luôn hiện trên cùng
    root.configure(bg='#333333') # Màu nền

    # Lấy kích thước màn hình để căn giữa
    screen_width = root.winfo_screenwidth()
    screen_height = root.winfo_screenheight()
    window_width = 400
    window_height = 100
    
    x_cordinate = int((screen_width/2) - (window_width/2))
    y_cordinate = int((screen_height/2) - (window_height/2))
    
    root.geometry(f"{window_width}x{window_height}+{x_cordinate}+{y_cordinate}")

    # Tạo chữ
    label = tk.Label(root, text=text, font=("Arial", 16, "bold"), fg="white", bg="#333333")
    label.pack(expand=True)

    # Tự động tắt sau 'duration' mili giây
    root.after(duration, root.destroy)
    root.mainloop()

# === CHỈNH SỬA NỘI DUNG Ở DƯỚI ĐÂY ===
hien_thong_bao("Sắp đóng script bản beta")

