local WindUI = (loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua")))();
local Window = WindUI:CreateWindow({
	Title = "Bear Hud[beta]",
	Author = "by Quang Huy",
	Folder = "Bear Hud[beta]",
	Size = UDim2.fromOffset(520, 300),
	Transparent = true,
	Theme = "Light",
	SideBarWidth = 190,
	HasOutline = false,
});
Window:EditOpenButton({
	Title = "Bear Hud[beta]",
	CornerRadius = UDim.new(0, 10),
	Draggable = false
});
local Tabs = {
	MiscTab = Window:Tab({
		Title = "Blox Fruit",
		Icon = "layout-grid",
		Desc = "Misc Section"
	}),
    NoTab = Window:Tab({
		Title = "Khác",
		Icon = "layout-grid",
		Desc = "Misc Section"
	}),
InfoTab = Window:Tab({
		Title = "Thông Tin",
		Icon = "info",
		Desc = "Info Section"
	})
};
MiscSection = Tabs.MiscTab:Section({
	Title = "Blox fruit",
	TextXAlignment = "Left"
});
Bearhud = Tabs.MiscTab:Button({
	Title = "Huy pvp",
	Callback = function()
		loadstring(game:HttpGet("https://raw.githubusercontent.com/Huylovemy/Pvp/refs/heads/main/Huypvp"))()
	end
});
Bearhud = Tabs.MiscTab:Button({
	Title = "Join Marines Team",
	Callback = function()
		(game:GetService("ReplicatedStorage")).Remotes.CommF_:InvokeServer("SetTeam", "Marines");
	end
});
Bearhud = Tabs.InfoTab:Button({
	Title = "Thông báo",
	Callback = function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Huylovemy/Bear-hud-/refs/heads/main/Updatescript"))()
	end
});
Bearhud = Tabs.InfoTab:Paragraph({
	Title = "Link Tik Tok",
	Desc = "Link Tik Tok Huy script",
	TextXAlignment = "Left",
	Buttons = {
		{
			Title = "Copy Link Tik Tok",
			Callback = function()
				setclipboard("https://www.tiktok.com/@huyscriptth?_r=1&_t=ZS-92hNw4CNwRM");
				WindUI:Notify({
					Title = "Notication",
					Content = "Tik Tok Link Copied",
					Icon = "bell",
					Duration = 3
				});
			end
		}
	}
});
